<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.activities.Settings">

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/settings"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/settingsColourButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/settingsColourText"
        app:layout_constraintStart_toStartOf="@+id/settingsResultSpinner"
        app:layout_constraintTop_toTopOf="@+id/settingsColourText" />

    <Spinner
        android:id="@+id/settingsResultSpinner"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/settingsResultText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/settingsResultText" />

    <Spinner
        android:id="@+id/settingsAlgorithmSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toBottomOf="@+id/settingsAlgorithmText"
        app:layout_constraintEnd_toEndOf="@+id/settingsResultSpinner"
        app:layout_constraintStart_toStartOf="@+id/settingsResultSpinner" />

    <TextView
        android:id="@+id/settingsColourText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/white_mode"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/settingsResultText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsTitle" />

    <TextView
        android:id="@+id/settingsResultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result_view"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/settingsAlgorithmText"
        app:layout_constraintEnd_toEndOf="@+id/settingsColourText"
        app:layout_constraintTop_toBottomOf="@+id/settingsColourText" />

    <TextView
        android:id="@+id/settingsAlgorithmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/algorithm"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/settingsColourText"
        app:layout_constraintTop_toBottomOf="@+id/settingsResultText" />

    <TextView
        android:id="@+id/settingsResultExplanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsResultSpinner" />

    <TextView
        android:id="@+id/settingsAlgorithmExplanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsAlgorithmSpinner" />
</androidx.constraintlayout.widget.ConstraintLayout>